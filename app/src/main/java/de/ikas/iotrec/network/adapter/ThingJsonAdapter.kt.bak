package de.ikas.iotrec.network.adapter

import com.squareup.moshi.ToJson
import com.squareup.moshi.FromJson
import de.ikas.iotrec.database.model.Category
import de.ikas.iotrec.network.json.CategoryJson


internal class ThingJsonAdapter {
    @FromJson
    fun thingFromJson(thingJson: ThingJson): Thing {
        val thing = Thing(
            thingJson.text_id,
            thingJson.name,
            thingJson.parent,
            thingJson.level,
            thingJson.selected
        )
        return thing
    }

    @ToJson
    fun thingToJson(thing: Thing): ThingJson {
        val json = ThingJson(
            thing.textId,
            thing.name,
            thing.parentTextId,
            thing.level,
            thing.selected
        )
        return json
    }
}